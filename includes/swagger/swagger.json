{
    "openapi": "3.0.0",
    "info": {
      "title": "TrinityKitWP API",
      "description": "API para criar posts e fazer upload de imagens no WordPress",
      "version": "1.0.0"
    },
    "servers": [
      {
        "url": "/wp-json/trinitykitcms-api/v1",
        "description": "API TrinityKitCMS"
      }
    ],
    "paths": {
      "/configs": {
        "get": {
          "summary": "Obter configurações do site",
          "description": "Retorna as configurações básicas do site WordPress",
          "security": [
            {
              "ApiKeyAuth": []
            }
          ],
          "responses": {
            "200": {
              "description": "Configurações obtidas com sucesso",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "success": {
                        "type": "boolean",
                        "example": true
                      },
                      "data": {
                        "type": "object",
                        "properties": {
                          "site_name": {
                            "type": "string",
                            "description": "Nome do site WordPress"
                          },
                          "site_description": {
                            "type": "string",
                            "description": "Descrição do site WordPress"
                          },
                          "whatsapp_url": {
                            "type": "string",
                            "description": "URL do WhatsApp para contato"
                          },
                          "google_analytics_id": {
                            "type": "string",
                            "description": "ID do Google Analytics"
                          },
                          "frontend_app_url": {
                            "type": "string",
                            "description": "URL do aplicativo frontend"
                          },
                          "github_user": {
                            "type": "string",
                            "description": "Usuário do GitHub"
                          },
                          "github_repo": {
                            "type": "string",
                            "description": "Repositório do GitHub"
                          }
                        }
                      }
                    }
                  }
                }
              }
            },
            "401": {
              "description": "Erro de autenticação",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "code": {
                        "type": "string",
                        "example": "invalid_api_key"
                      },
                      "message": {
                        "type": "string",
                        "example": "API Key inválida ou não fornecida"
                      },
                      "data": {
                        "type": "object",
                        "properties": {
                          "status": {
                            "type": "integer",
                            "example": 401
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "/products": {
        "get": {
          "summary": "Listar todos os produtos",
          "description": "Retorna uma lista de todos os produtos com suas taxonomias e campos personalizados",
          "security": [
            {
              "ApiKeyAuth": []
            }
          ],
          "responses": {
            "200": {
              "description": "Lista de produtos obtida com sucesso",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "success": {
                        "type": "boolean",
                        "example": true
                      },
                      "data": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "id": {
                              "type": "integer",
                              "description": "ID do produto"
                            },
                            "title": {
                              "type": "string",
                              "description": "Título do produto"
                            },
                            "cas_number": {
                              "type": "string",
                              "description": "Número CAS do produto"
                            },
                            "segments": {
                              "type": "array",
                              "items": {
                                "type": "object",
                                "properties": {
                                  "id": {
                                    "type": "integer",
                                    "description": "ID do segmento"
                                  },
                                  "name": {
                                    "type": "string",
                                    "description": "Nome do segmento"
                                  },
                                  "slug": {
                                    "type": "string",
                                    "description": "Slug do segmento"
                                  }
                                }
                              }
                            },
                            "product_lines": {
                              "type": "array",
                              "items": {
                                "type": "object",
                                "properties": {
                                  "id": {
                                    "type": "integer",
                                    "description": "ID da linha de produto"
                                  },
                                  "name": {
                                    "type": "string",
                                    "description": "Nome da linha de produto"
                                  },
                                  "slug": {
                                    "type": "string",
                                    "description": "Slug da linha de produto"
                                  }
                                }
                              }
                            }
                          }
                        }
                      },
                      "items": {
                        "type": "integer",
                        "description": "Número total de produtos retornados",
                        "example": 10
                      }
                    }
                  }
                }
              }
            },
            "401": {
              "description": "Erro de autenticação",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "code": {
                        "type": "string",
                        "example": "invalid_api_key"
                      },
                      "message": {
                        "type": "string",
                        "example": "API Key inválida ou não fornecida"
                      },
                      "data": {
                        "type": "object",
                        "properties": {
                          "status": {
                            "type": "integer",
                            "example": 401
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "/segment/{slug}": {
        "get": {
          "summary": "Listar produtos por segmento",
          "description": "Retorna uma lista de produtos filtrados por um segmento específico",
          "parameters": [
            {
              "name": "slug",
              "in": "path",
              "required": true,
              "description": "Slug do segmento",
              "schema": {
                "type": "string"
              }
            }
          ],
          "security": [
            {
              "ApiKeyAuth": []
            }
          ],
          "responses": {
            "200": {
              "description": "Lista de produtos do segmento obtida com sucesso",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "success": {
                        "type": "boolean",
                        "example": true
                      },
                      "data": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "id": {
                              "type": "integer",
                              "description": "ID do produto"
                            },
                            "title": {
                              "type": "string",
                              "description": "Título do produto"
                            },
                            "cas_number": {
                              "type": "string",
                              "description": "Número CAS do produto"
                            },
                            "segments": {
                              "type": "array",
                              "items": {
                                "type": "object",
                                "properties": {
                                  "id": {
                                    "type": "integer",
                                    "description": "ID do segmento"
                                  },
                                  "name": {
                                    "type": "string",
                                    "description": "Nome do segmento"
                                  },
                                  "slug": {
                                    "type": "string",
                                    "description": "Slug do segmento"
                                  }
                                }
                              }
                            },
                            "product_lines": {
                              "type": "array",
                              "items": {
                                "type": "object",
                                "properties": {
                                  "id": {
                                    "type": "integer",
                                    "description": "ID da linha de produto"
                                  },
                                  "name": {
                                    "type": "string",
                                    "description": "Nome da linha de produto"
                                  },
                                  "slug": {
                                    "type": "string",
                                    "description": "Slug da linha de produto"
                                  }
                                }
                              }
                            }
                          }
                        }
                      },
                      "items": {
                        "type": "integer",
                        "description": "Número total de produtos retornados",
                        "example": 5
                      },
                      "segment": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "integer",
                            "description": "ID do segmento"
                          },
                          "name": {
                            "type": "string",
                            "description": "Nome do segmento"
                          },
                          "slug": {
                            "type": "string",
                            "description": "Slug do segmento"
                          }
                        }
                      }
                    }
                  }
                }
              }
            },
            "404": {
              "description": "Segmento não encontrado",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "code": {
                        "type": "string",
                        "example": "segment_not_found"
                      },
                      "message": {
                        "type": "string",
                        "example": "Segmento não encontrado"
                      },
                      "data": {
                        "type": "object",
                        "properties": {
                          "status": {
                            "type": "integer",
                            "example": 404
                          }
                        }
                      }
                    }
                  }
                }
              }
            },
            "401": {
              "description": "Erro de autenticação",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "code": {
                        "type": "string",
                        "example": "invalid_api_key"
                      },
                      "message": {
                        "type": "string",
                        "example": "API Key inválida ou não fornecida"
                      },
                      "data": {
                        "type": "object",
                        "properties": {
                          "status": {
                            "type": "integer",
                            "example": 401
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "components": {
      "securitySchemes": {
        "ApiKeyAuth": {
          "type": "apiKey",
          "in": "header",
          "name": "X-API-Key"
        }
      }
    }
  } 